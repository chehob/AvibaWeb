@using AvibaWeb.ViewModels.CorpClientViewModels
@model IndexViewModel

@if (Model.IsUserLoggedInKRS ||
    User.IsInRole("Administrators") || User.IsInRole("Офис") || User.IsInRole("Инкассаторы") || User.IsInRole("Кассиры"))
{
<p class="btn-group">
    <a asp-action="CreateReceipt" asp-controller="CorpClient"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-primary"><i class="glyphicon glyphicon-plus">&nbsp;</i>Создать счет</a>
    <a asp-action="Receipts" asp-controller="CorpClient"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-list-alt">&nbsp;</i>Список счетов</a>
    <a asp-action="CreateCounterparty" asp-controller="Data"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-plus">&nbsp;</i>Новый клиент</a>
    @if (User.IsInRole("Administrators") || User.IsInRole("Офис"))
    {
    <a asp-action="CorporatorDocuments" asp-controller="Admin"
        data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
        class="btn btn-primary"><i class="glyphicon glyphicon-list-alt">&nbsp;</i>Договоры</a>
    }

</p>
}
else
{
    <p>Войдите в систему КРС</p>
}

<div class="box col-md-10">
    <div id="results"></div>
</div>