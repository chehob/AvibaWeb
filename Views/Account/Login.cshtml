@using AvibaWeb.ViewModels.AccountViewModels
@model AvibaWeb.ViewModels.AccountViewModels.LoginModel
@{
    ViewBag.Title = "Вход";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken();
	<input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
	
    <div class="ch-container">
    <div class="row">
        
    <div class="row">
        <div class="col-md-12 center login-header">
            <h2>AVIBA MANAGER SYSTEM</h2>
        </div>
        <!--/span-->
    </div><!--/row-->

    <div class="row">
        <div class="well col-md-5 center login-box">
            <div class="alert alert-info">
                Пожалуйста введите имя пользователя и пароль
            </div>
            
                
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                    <div class="clearfix"></div><br>

                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="clearfix"></div>

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="clearfix"></div>

                    <p class="center col-md-5">
					<input type="submit" class="btn btn-primary" value="Вход" />
                    
                    </p>
                
            
        </div>
        <!--/span-->
    </div><!--/row-->
</div><!--/fluid-row-->

</div><!--/.fluid-container-->

<!-- external javascript -->

@*Scripts.Render("~/bundles/charisma_script")*@
	
	
	

}


