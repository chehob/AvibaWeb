                    // Номер
                    // @dataRecord.Number

                    // Вид операции
                    // @dataRecord.OperationType

                    // Сумма
                    // @dataRecord.Amount

                    // Валюта
                    // @dataRecord.Currency

                    // Основание платежа
                    // @dataRecord.PaymentDescription

                    // БИК Банка получателя
                    // @dataRecord.PayeeBankBIC

                    // Счет получателя
                    // @dataRecord.PayeeAccount

                    // Наименование получателя
                    // @dataRecord.PayeeName

                    // Наименование банка получателя
                    // @dataRecord.PayeeBankName

                    // ИНН получателя
                    // @dataRecord.PayeeITN

                    // Флаг на наличие записи контрагента в БД
                    // @dataRecord.IsKnownCounterparty
                }
            </div>
            }
        </div>
    </div>
</div>

