@using AvibaWeb.DomainModels
@model List<Counterparty>

<div class="box col-md-10">
    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2>Баланс провайдеров услуг</h2>
                </div>
                <div class="box-content">
                    @if (!Model.Any())
                    {
                        <div class="row">
                            <div>Нет контрагентов</div>
                        </div>
                    }
                    else
                    {
                        <form asp-controller="Data" asp-action="EditProviderDeposit" data-ajax-update="#results" data-ajax="true" data-ajax-method="POST">
                            @for (var i = 0; i < Model.Count; ++i)
                            {
                                @Html.HiddenFor(c => Model[i].ITN)
                                <div class="row">
                                    <div class="col-md-3">@Html.DisplayFor(c => Model[i].Name)</div>
                                    <div class="col-md-2">@Html.TextBoxFor(c => Model[i].ProviderBalance.Deposit, new { @class = "form-control" })</div>
                                </div>
                                <hr>
                            }
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Сохранить" />
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>