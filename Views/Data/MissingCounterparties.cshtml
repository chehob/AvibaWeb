@model AvibaWeb.ViewModels.DataViewModels.ImportCashlessDataViewModel.MissingCounterpartiesViewModel

<form asp-action="AddMissingCounterparties" enctype="application/x-www-form-urlencoded"
      data-ajax="true" data-ajax-method="POST">
    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <thead>
        <tr>
            <th>Username</th>
            <th>Date registered</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.MissingCounterparties.Count; ++i)
        {
            <tr>
                <td><input asp-for="@Model.MissingCounterparties[i].ITN" type="text" readonly /></td>
                <td><input asp-for="@Model.MissingCounterparties[i].Name" type="text" readonly /></td>
                <td>
                    <input asp-for="@Model.MissingCounterparties[i].CorrespondentAccount" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].KPP" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].BIK" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].OGRN" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].Phone" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].Address" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].Email" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].BankName" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].BankAccount" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].ManagementName" type="hidden"/>
                    <input asp-for="@Model.MissingCounterparties[i].ManagementPosition" type="hidden"/>
                    <select asp-for="@Model.MissingCounterparties[i].TypeId" asp-items="@Model.CounterpartyTypes" class="form-control"></select>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <input type="submit" value="Добавить" />
</form>

