@using AvibaWeb.ViewModels.RevenueViewModels
@model ProviderAgentFeeListModel

<table class="table table-striped table-bordered bootstrap-datatable datatable" id="dataTable">
    <thead>
        <tr>
            <th>Провайдер</th>
            <th>Сумма</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Providers.Any())
        {
            <tr>
                <td colspan="3" class="text-center">Нет провайдеров</td>
                <td style="display: none;"></td>
                <td style="display: none;"></td>
            </tr>
        }
        else
        {
            foreach (var provider in Model.Providers)
            {
                <tr>
                    <td>
                        <span>@provider.Name</span>
                    </td>
                    <td>
                        <span>@provider.FeeAmount</span>
                    </td>
                    <td>
                        <a asp-action="AddProviderAgentFee" asp-controller="Revenue" asp-route-id="@provider.ProviderId"
                           data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
                           class="btn btn-success">
                            <i class="glyphicon glyphicon-circle-arrow-down"></i>
                            Добавить
                        </a>
                        <a asp-action="ProviderAgentFeeTransactions" asp-controller="Revenue" asp-route-id="@provider.ProviderId"
                           data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
                           class="btn btn-primary">
                            <i class="glyphicon glyphicon-list-alt"></i>
                            Операции
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>