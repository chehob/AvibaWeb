@using AvibaWeb.ViewModels.CorpReceiptViewModels
@model List<MultiPaymentViewModel>

<table class="table table-striped table-bordered bootstrap-datatable datatable" id="dataTable">
    <thead>
    <tr>
        <th>Дата</th>
        <th>Сумма</th>
        <th>Комментарий</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr><td colspan="4" class="text-center">Нет счетов</td></tr>
    }
    else
    {
        foreach (var payment in Model)
        {
            <tr>
                <td>
                    <span>@payment.CreatedDateTime</span>
                </td>
                <td>
                    <span>@payment.Amount</span>
                </td>
                <td>
                    <span>@payment.Description</span>
                </td>
                <td style="width: 300px;">
                    <a asp-action="MultiPaymentProcess" asp-controller="CorpReceipt" asp-route-paymentId="@payment.PaymentId"
                       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
                       class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-plus">&nbsp;</i>Распределить платеж</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

<script>
    $(function () {
        var oTable = $('#dataTable').dataTable({
                    "sPaginationType": "full_numbers",
            "bSort": false,
            "oLanguage": {
                        "sSearch": "Поиск:",
                "sLengthMenu": "Показать _MENU_ записей",
                "sInfo": "Записи с _START_ до _END_ из _TOTAL_ записей",
                "sInfoEmpty": "Записи с 0 до 0 из 0 записей",
                "sInfoFiltered": "(отфильтровано из _MAX_ записей)",
                "oPaginate": {
                            "sFirst":    'Первая',
                    "sPrevious": 'Предыдущая',
                    "sNext":     'Следующая',
                    "sLast":     'Последняя'
                },
                "oaria": {
                            "ipaginate": {
                                "nfirst":    'Начало',
                        "nprevious": 'Previous',
                        "nnext":     'Next',
                        "nlast":     'Last'
                    }
                        }
                    }
                });
    });
</script>