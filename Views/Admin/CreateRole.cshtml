@model string
@{
    ViewBag.Title = "Создать роль";
}
   <div class="box col-md-10">
    <div class="box-inner" style="margin-top:-10px;">
    <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-user"></i> Создать роль</h2>
    </div>
    <div class="box-content">

<form asp-controller="Admin" asp-action="CreateRole" data-ajax-update="#results" data-ajax="true" data-ajax-method="POST">
    <div class="form-group">
        <div class="col-md-2">
		<label>Роль</label>
		</div>
        <div class="col-md-8">
			
            <input name="name" value="@Model" class="form-control" />
        </div>
    </div>
    @Html.ValidationSummary(false)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Создать" />
            <a asp-action="Roles" asp-controller="Admin"
               data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
               class="btn btn-default">Отмена</a>
        </div>
    </div>
</form>
</div></div></div>