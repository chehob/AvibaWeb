@using AvibaWeb.DomainModels
@model FinancialAccount

<div class="box col-md-10">
    <div class="box-inner" style="">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-user"></i> Редактировать расчетный счет</h2>
        </div>
        <div class="box-content">

            <form asp-controller="Admin" asp-action="EditFinancialAccount"
                  data-ajax-update="#results" data-ajax="true" data-ajax-method="POST">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.FinancialAccountId)

                <div class="row">
                    <label asp-for="@Model.Description" class="col-md-2 control-label">Р/c</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Description, new {@class = "form-control"})
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.BankName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.BankName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.OffBankName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.OffBankName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.BIK, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.BIK, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.CorrespondentAccount, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.CorrespondentAccount, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Balance, new { @class = "col-md-2 control-label" })
                    <div class="col-md-1">
                        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsActive, new { @class = "col-md-2 control-label" })
                    <div class="col-md-1">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                    </div>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-success" value="Сохранить" />
                        <a asp-action="Organizations" asp-controller="Admin"
                           data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
                           class="btn btn-danger">Отмена</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>