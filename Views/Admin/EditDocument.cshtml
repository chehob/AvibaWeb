@using AvibaWeb.DomainModels
@model CorporatorDocument

<div class="box col-md-10">
    <div class="box-inner" style="">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-user"></i> Редактировать организацию</h2>
        </div>
        <div class="box-content">

            <form asp-controller="Admin" asp-action="EditDocument"
                  data-ajax-update="#results" data-ajax="true" data-ajax-method="POST">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.CorporatorDocumentId)
                @Html.HiddenFor(m => m.Date, new { id = "documentDate" })

                <div class="row">
                    Организация:
                    <div class="col-md-10">
                        @Model.Organization.Description
                    </div>
                </div>
                <div class="row">
                    Корпоратор:
                    <div class="col-md-10">
                        @Model.Corporator.Name
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Document, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Document, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" })
                    <div class="col-md-1">
                        <input type="text" id="min" name="min" class="date-range-filter">
                    </div>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-success" value="Сохранить" />
                        <a asp-action="CorporatorDocuments" asp-controller="Admin"
                           data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
                           class="btn btn-danger">Отмена</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(function() {
        $("#min").datepicker();
        $("#min").val(moment($('#documentDate').val(), "DD.MM.YYYY").format("DD.MM.YYYY"));
    });
</script>