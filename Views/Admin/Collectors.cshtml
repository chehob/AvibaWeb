@using AvibaWeb.DomainModels
@model IEnumerable<AvibaWeb.DomainModels.Collector>
@{
    ViewBag.Title = "Collectors";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Карты
    </div>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CollectorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr><td colspan="2" class="text-center">Нет карт</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CollectorID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @using (Html.BeginForm("DeleteCollector", "Admin", new { id = item.CollectorID }))
                        {
                            @Html.ActionLink("Изменить", "EditCollector", new { id = item.CollectorID }, new { @class = "btn btn-primary btn-xs" })
                            <button class="btn btn-danger btn-xs" type="submit">Удалить</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
