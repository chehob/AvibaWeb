@using AvibaWeb.ViewModels.AdminViewModels
@model AvibaWeb.ViewModels.AdminViewModels.LoanGroupViewModel

<div class="box col-md-10">
    <div class="box-inner" style="margin-top:-10px;">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-user"></i> Редактор подразделения</h2>
        </div>
        <div class="box-content">

            <form asp-controller="Admin" asp-action="EditLoanGroup"
                  data-ajax-update="#results" data-ajax="true" data-ajax-method="POST">
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Counterparties, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.ListBoxFor(i => i.CounterpartyIds, Model.Counterparties,
                            new { id="counterpartySelect", @class = "form-control" })
                    </div>
                </div>
                <script type="text/javascript">
                    $('#counterpartySelect').multiSelect()
                </script>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsActive, new { @class = "col-md-2 control-label" })
                    <div class="col-md-1">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                    </div>
                </div>
                @Html.ValidationSummary(false)
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Сохранить" />
                        <a asp-action="LoanGroups" asp-controller="Admin"
                           data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
                           class="btn btn-default">Отмена</a>
                    </div>
                </div>
            </form>
        </div></div></div>