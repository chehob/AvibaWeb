@using AvibaWeb.Models
@using AvibaWeb.Infrastructure
@model IQueryable<ExpenditureType>

@{
    ViewBag.Title = "Типы расходных операций";
}

    <div class="box col-md-10">
    <div class="box-inner" style="margin-top:-10px;">
    <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-user"></i> Типы расходных операций</h2>
    </div>
    <div class="box-content">
    <div class="alert" style="text-align:right;">
	<a class="btn btn-success" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#results" href=@Url.Action("CreateExpenditureType","Admin")>
                <i class="glyphicon glyphicon-plus icon-white"></i>
                Создать
            </a>
	</div>

    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
	 <thead>
        <tr>
            <th>Типы расходных операций</th>
			<th>Действия</th>
        </tr>
		</thead>
		    <tbody>

        @if (!Model.Any())
            {
            <tr><td colspan="3" class="text-center">Нет типов расходных операций</td></tr>
        }
        else
        {
            foreach (var expenditureType in Model)
            {
                <tr>
                    <td>@expenditureType.Description
					@if( expenditureType.IsActive )
					{
						<span class="label-success label label-default">Активен</span>
					}
					else
					{
						<span class="label-default label label-danger">Не активен</span>
					}
					</td>
                    <td>
							<a class="btn btn-info" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#results" href=@Url.Action("EditExpenditureType","Admin", new{id = expenditureType.ExpenditureTypeId})>
							<i class="glyphicon glyphicon-edit icon-white"></i>
							Изменить
						</a>
                    </td>
                </tr>
            }
        }
		</tbody>
    </table>
</div>
    </div>
    </div>

</div>


