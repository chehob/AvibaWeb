@using System.Linq
@using AvibaWeb.DomainModels
@model IQueryable<AvibaWeb.DomainModels.Desk>

@{

    ViewBag.Title = "Пульты";
}

</div>
<div class="box col-md-10">
    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col-md-12 text-center">Нет пультов</div>
        </div>
    }
    else
    {
        foreach (var desk in Model)
        {
            <div class="box col-md-6">
                <div class="box-inner" style="">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="glyphicon glyphicon-user"></i> @desk.Description (@desk.DeskId)</h2>
                        <div class="text-right box-icon">
                            @if (User.IsInRole("Administrators"))
                            {
                                <a asp-action="EditDesk" asp-controller="Admin" asp-route-id="@desk.DeskId"
                                   data-ajax="true" data-ajax-mode="replace" data-ajax-update="#results"
                                   class="btn btn-setting btn-round btn-default">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                </a>
                            }
                            @if (desk.IsActive)
                            {
                                <span class="label-success label label-default">Активен</span>
                            }
                            else
                            {
                                <span class="label-default label label-danger">Не активен</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }


</div>


