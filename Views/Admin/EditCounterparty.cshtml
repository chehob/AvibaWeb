@using AvibaWeb.ViewModels.AdminViewModels
@model CounterpartyEditModel

<div class="box col-md-10">
    <div class="box-inner" style="">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-user"></i> Редактор контрагента</h2>
        </div>
        <div class="box-content">

            <form asp-controller="Admin" asp-action="EditCounterparty" enctype="multipart/form-data"
                  data-ajax-update="#results" data-ajax="true" data-ajax-method="POST">
                <div class="row">
                    @Html.LabelFor(m => m.Item.ITN, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <input asp-for="@Model.Item.ITN" readonly />
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.CorrespondentAccount, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.CorrespondentAccount, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.KPP, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.KPP, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.BIK, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.BIK, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.OGRN, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.OGRN, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.Phone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.Phone, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.Address, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.Address, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.BankName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.BankName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.BankAccount, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.BankAccount, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.ManagementName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.ManagementName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.ManagementPosition, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Item.ManagementPosition, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Item.Type.Description, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <select asp-for="Item.TypeId" asp-items="@Model.Types" class="form-control"></select>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="Item.ExpenditureDeskGroupId"  class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="Item.ExpenditureDeskGroupId" asp-items="@Model.DeskGroups" class="form-control">
                            <option value=""></option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="Item.ExpenditureObjectId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="Item.ExpenditureObjectId" asp-items="@Model.ExpenditureObjects" class="form-control">
                            <option value=""></option>
                        </select>
                    </div>
                </div>
                @Html.ValidationSummary(false)
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Сохранить" />
                        <a asp-action="Counterparties" asp-controller="Admin"
                           data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
                           class="btn btn-default">Отмена</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
