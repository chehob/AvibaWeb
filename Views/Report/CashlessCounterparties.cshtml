@using AvibaWeb.ViewModels.ReportViewModels
@model CashlessCorpViewModel

<div class="box col-md-10">
    <div class="row">
                <div class="col-md-3 col-sm-3 col-xs-6">

                <span data-toggle="tooltip" title="Всего" class="well top-block">
            <span class="red">Задолженность</span>

            <div></div>
            <div class="red">@Model.NegBalance</div>
            
        </span>
    </div>
                 <div class="col-md-3 col-sm-3 col-xs-6">

                <span data-toggle="tooltip" title="Всего" class="well top-block">
            <span class="green">Предоплата</span>

            <div></div>
            <div class="green">@Model.PosBalance</div>
            
        </span>
    </div>
                    <div class="col-md-3 col-sm-3 col-xs-6">

                <span data-toggle="tooltip" title="Всего" class="well top-block">
            <span class="">Сальдо</span>

            <div></div>
            <div class="">@Model.TotalStr</div>
            
        </span>
    </div>   
    
    </div>
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="" style="overflow: hidden;">
                <h2><i class="glyphicon glyphicon-plane"></i> Корпоративные клиенты</h2>
            </div>
            <div class="box-content">
<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <th>Наименование</th>
        <th>Сумма</th>
        <th>Последний счет не оплачен<br><i>(раб.дней)</i></th>
        <th>Оплата<br><i>(дней назад)</i></th>
        

    </thead>
                                <tbody>
                @foreach (var counterparty in Model.Items)
                {
                    
                            
                                    <tr>
                                       
                                        @if (counterparty.Balance >= 0)
                            {
                                <td>
                                        <span class="green">@counterparty.CorpName</span>

                                        </td>
                                        <td>
                                <span class="green">@counterparty.BalanceStr</span>
                                </td>
                                    
                            }
                            else
                            {
                                <td>
                                        <span class="red">@counterparty.CorpName</span>

                                        </td>
                                        <td>
                                <span class="red">@counterparty.BalanceStr</span>
                                </td>
                                
                            }    
                            <td>@counterparty.LastReceiptDays</td>
                                        <td>@counterparty.LastPaymentDays</td>
                            </tr>            

                }
                </tbody>

                            </table>
            </div>
        </div>
    </div>
</div>