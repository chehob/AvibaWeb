@using AvibaWeb.ViewModels.ManagementViewModels
@model PaycheckOperationsViewModel

<div class="box">
    <div class="box-inner">
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable" id="dataTable">
                <thead>
                    <tr>
                        <th>ФИО</th>
                        <th>Кол-во смен</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Amount</td>
                            <td style="overflow: hidden; max-width: 100px; text-overflow: ellipsis; white-space: nowrap;">
                                <span data-toggle="tooltip" title="@foreach (var ci in item.CheckIns)
                                      {
@:@ci.CheckInDateTime (@ci.DeskId)
                                      }" class="glyphicon glyphicon-list-alt" style="cursor: pointer;"></span>
                                Смены
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function() {
        var oTable = $('#dataTable').dataTable({
            "iDisplayLength": 100,
            "aLengthMenu": [[10, 20, 50, 100, -1], [10, 20, 50, 100, "все"]],
            "bStateSave": false,
            "sPaginationType": "full_numbers",
            "bSort": false,
            "aaSorting": [[0, "desc"]],
            "columnDefs": [
                {
                    "defaultContent": "-",
                    "targets": "_all"
                }
            ],
            "oLanguage": {
                "sSearch": "Поиск:",
                "sLengthMenu": "Показать _MENU_ записей",
                "sInfo": "Записи с _START_ до _END_ из _TOTAL_ записей",
                "sInfoEmpty": "Записи с 0 до 0 из 0 записей",
                "sInfoFiltered": "(отфильтровано из _MAX_ записей)",
                "oPaginate": {
                    "sFirst": 'Первая',
                    "sPrevious": 'Предыдущая',
                    "sNext": 'Следующая',
                    "sLast": 'Последняя'
                },
                "oaria": {
                    "ipaginate": {
                        "nfirst": 'Начало',
                        "nprevious": 'Previous',
                        "nnext": 'Next',
                        "nlast": 'Last'
                    }
                }
            }
        });
    });
</script>