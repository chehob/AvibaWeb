@using AvibaWeb.DomainModels
@using AvibaWeb.ViewModels.TransitViewModels
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Common
@model TransitAccountIssuedCreditsViewModel

<div class="box col-md-10">
    <div class="row">
        <!-- CONTENT START -->
        <div class="col-md-2"><b>@Html.DisplayFor(c => Model.FinancialOperationsTotal)</b></div>
        <div class="col-md-2"><b>@Html.DisplayFor(c => Model.CreditsTotal)</b></div>
        <div class="col-md-2"><b>@Html.DisplayFor(c => Model.AddTotal)</b></div>
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2>Оформленные переводы на группу</h2>
                </div>
                <div class="box-content">
                    @if (!Model.Credits.Any())
                    {
                        <div>Нет операций</div>
                    }
                    else
                    {
                        foreach (var credit in Model.Credits)
                        {
                            @if (credit.Amount >= 0)
                            {
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.DisplayFor(c => credit.IssuedDateTime)
                                    </div>
                                    <div class="col-md-2"><b>@Html.DisplayFor(c => credit.AmountStr)</b></div>
                                    <div class="col-md-2"><b>@Html.DisplayFor(c => credit.AddAmountStr)</b></div>
                                    <div class="col-md-2">@Html.DisplayFor(c => credit.Status)</div>
                                    <div class="col-md-2">
                                        @if (credit.CreditId != 0 && credit.Status != TransitAccountCreditOperation.TACOType.Cancelled)
                                        {
                                            <form asp-controller="Transit" asp-action="CancelCredit" asp-route-id="@credit.CreditId"
                                                  data-ajax-update="#contentResults" data-ajax="true" data-ajax-method="POST">
                                                <input id="btnCancelCredit" type="image" name="picture" src="~/images/del.png" width="32" height="32" />
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.DisplayFor(c => credit.IssuedDateTime)
                                    </div>
                                    <div class="col-md-2" style="background-color: rgb(197, 247, 197)"><b>@Html.DisplayFor(c => credit.AmountStr)</b></div>
                                    <div class="col-md-2"><b>@Html.DisplayFor(c => credit.AddAmount)</b></div>
                                    <div class="col-md-2">@Html.DisplayFor(c => credit.Status)</div>
                                    <div class="col-md-2">
                                        @if (credit.CreditId != 0 && credit.Status != TransitAccountCreditOperation.TACOType.Cancelled)
                                        {
                                            <form asp-controller="Transit" asp-action="CancelCredit" asp-route-id="@credit.CreditId"
                                                  data-ajax-update="#contentResults" data-ajax="true" data-ajax-method="POST">
                                                <input id="btnCancelCredit" type="image" name="picture" src="~/images/del.png" width="32" height="32" />
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                            <hr>
                        }
                    }

                </div>
                Страница @(Model.Credits.PageCount < Model.Credits.PageNumber ? 0 : Model.Credits.PageNumber) из @Model.Credits.PageCount

                @Html.PagedListPager(Model.Credits, page => Url.Action("IssuedCredits", new { page, Model.Credits.FirstOrDefault().LoanGroupId }),
                        new Func<PagedListRenderOptionsBase>(() =>
                        {
                            var options = PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                                new AjaxOptions()
                                {
                                    HttpMethod = "GET",
                                    UpdateTargetId = "contentResults"
                                });
                            options.MaximumPageNumbersToDisplay = 5;
                            return options;
                        })())
            </div>
        </div>
    </div>
</div>