@using AvibaWeb.ViewModels.ExpenditureViewModels
@model AvibaWeb.ViewModels.ExpenditureViewModels.CreateExpenditureModel
@{
    ViewBag.Title = "Создать расходную операцию";
}

<form asp-controller="Expenditure" asp-action="CreateExpenditure" data-ajax-update="#results" data-ajax="true" data-ajax-method="POST">
    <h4>Создать новую операцию.</h4>
    <hr />
	<div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @Value = "" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Amount, new { @Value = "" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DeskGroups, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => Model.SelectedDeskGroupId, Model.DeskGroups)
        </div>
    </div>
	<div class="form-group">
        @Html.LabelFor(m => m.Types, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => Model.SelectedTypeId, Model.Types)
        </div>
    </div>
	<div class="form-group">
        @Html.LabelFor(m => m.Objects, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => Model.SelectedObjectId, Model.Objects)
        </div>
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Создать" />
            <a asp-action="IssuedExpenditures" asp-controller="Expenditure"
               data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
               class="btn btn-default">Отмена</a>
        </div>
    </div>
</form>


