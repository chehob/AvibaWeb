@using AvibaWeb.DomainModels
@using AvibaWeb.ViewModels.ExpenditureViewModels
@model CashlessExpenditureSummaryViewModel

<div class="col-md-12">
    Выбрать с: <input type="text" autocomplete="off" id="min" name="min" class="date-range-filter"> по: <input type="text" autocomplete="off" id="max" name="max" class="date-range-filter">
    <button id="groupByDeskGroup" class="btn btn-primary">По подразделению</button>
    <button id="groupByObject" class="btn btn-primary">По статье расходов</button>
</div>

<div class="box col-md-12">
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2>Итого: @Model.Amount</h2>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable" id="dataTable">
                <thead>
                    <tr>
                        <th>Наименование</th>
                        <th>Сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.ItemGroups.Any())
                    {
                        <tr>
                            <td colspan="2" class="text-center">Нет операций</td>
                            <td style="display: none;"></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var itemGroup in Model.ItemGroups)
                        {
                            <tr>
                                <td class="text-center">
                                    <div style="min-height: 32px;">@itemGroup.Name</div>
                                </td>
                                <td>
                                    <b>@itemGroup.AmountStr</b>
                                </td>
                            </tr>
                            foreach (var item in itemGroup.Items)
                            {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <b>@item.Amount</b>
                            </td>
                        </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        var oTable = $('#dataTable').dataTable({
                    "sPaginationType": "full_numbers",
            "bSort": false,
            "bPaginate": false,
            "bInfo": false,
            "bFilter": false,
            "oLanguage": {
                        "sSearch": "Поиск:",
                "sLengthMenu": "Показать _MENU_ записей",
                "sInfo": "Записи с _START_ до _END_ из _TOTAL_ записей",
                "sInfoEmpty": "Записи с 0 до 0 из 0 записей",
                "sInfoFiltered": "(отфильтровано из _MAX_ записей)",
                "oPaginate": {
                            "sFirst":    'Первая',
                    "sPrevious": 'Предыдущая',
                    "sNext":     'Следующая',
                    "sLast":     'Последняя'
                },
                "oaria": {
                            "ipaginate": {
                                "nfirst":    'Начало',
                        "nprevious": 'Previous',
                        "nnext":     'Next',
                        "nlast":     'Last'
                    }
                        }
                    }
                });

        $("#min").datepicker();
        $("#max").datepicker();

        $("#min").val(moment().subtract(30, 'days').format("DD.MM.YYYY"));
        $("#max").val(moment().format("DD.MM.YYYY"));
    });

    $("#groupByDeskGroup").click(function (e) {
        const sendJsonData = {
            grouping: 2,
            fromDate: moment($('#min').val(), "DD.MM.YYYY").toISOString(true),
            toDate: moment($('#max').val(), "DD.MM.YYYY").toISOString(true)
        };

        e.preventDefault();
        $.ajax({
            url: "/Expenditure/CashlessExpenditureSummary",
            type: "GET",
            cache: false,
            data: sendJsonData,
            success: function (result) {
                $("#results").html(result);
            },
            error: function (error) {
                console.log(error);
            }
        });
    });

    $("#groupByObject").click(function (e) {
        const sendJsonData = {
            grouping: 1,
            fromDate: moment($('#min').val(), "DD.MM.YYYY").toISOString(true),
            toDate: moment($('#max').val(), "DD.MM.YYYY").toISOString(true)
        };

        e.preventDefault();
        $.ajax({
            url: "/Expenditure/CashlessExpenditureSummary",
            type: "GET",
            cache: false,
            data: sendJsonData,
            success: function (result) {
                $("#results").html(result);
            },
            error: function (error) {
                console.log(error);
            }
        });
    });
</script>
