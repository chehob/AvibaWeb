@using AvibaWeb.ViewModels.ExpenditureViewModels

<p class="btn-group">
    <a asp-action="IssuedExpenditures" asp-controller="Expenditure"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-primary">Наличные</a>
    <a asp-action="CashlessExpenditures" asp-controller="Expenditure"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-primary">Безнал</a>
    <a asp-action="CashlessExpenditureSummary" asp-controller="Expenditure" asp-route-grouping="@ExpenditureSummaryGrouping.ByDeskGroup"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-primary">Безнал инфо</a>
    <a asp-action="IncomingExpenditures" asp-controller="Expenditure"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-plus">&nbsp;</i>Нераспределенные расходы</a>
</p>

<div class="box col-md-10">
    <a asp-action="CreateExpenditure" asp-controller="Expenditure"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-default">Создать операцию</a>
    <a asp-action="Debit" asp-controller="Transit"
       data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#results"
       class="btn btn-default">Перечислить на транзитный счет</a>
    <div class="box col-md-10">
        <div id="results"></div>
    </div>
</div>
