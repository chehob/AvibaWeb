<script>
    $body = $("body");

    $(document).on({
        ajaxStart: function() { 
            showLoader = setTimeout("$('.mWaiting').fadeIn(500);", 1000);
        },
        ajaxStop: function() { 
            clearTimeout(showLoader);
            $('.mWaiting').fadeOut(500);
        }
    });
</script>
