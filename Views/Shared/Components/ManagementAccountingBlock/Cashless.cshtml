@using AvibaWeb.ViewModels.ManagementAccountingViewModels
@model CashlessBlockViewModel

<div class="box col-md-3 b2">
    <div class="box-inner" style="cursor: pointer;" id="cashlessBlock">
        <div class="box-header well" data-original-title="" style="overflow: hidden;">
            <h2><i class="glyphicon glyphicon-tags"></i>&nbsp;&nbsp;Банк</h2>
        </div>
        <div class="box-content">
            @foreach (var org in Model.Organizations)
            {
                <div>@org.Name</div>
                <div>@org.BalanceStr</div>
            }
            <div>@Model.Total</div>
        </div>
    </div>
</div>

<script>
    $("#cashlessBlock").click(function (e) {
        e.preventDefault();
        $.ajax({
            url: "/Report/CashlessOrg",
            type: "GET",
            cache: false,
            success: function (result) {
                $("#contentResults").html(result);
            },
            error: function (error) {
                console.log(error);
            }
        });
    });
</script>