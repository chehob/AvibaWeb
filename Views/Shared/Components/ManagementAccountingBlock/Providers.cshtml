@using AvibaWeb.ViewModels.ManagementAccountingViewModels
@model CashlessBlockViewModel

<div class="box col-md-5 b5">
    <div class="box-inner" style="cursor: pointer;" id="providersBlock">
        <div class="box-header well" data-original-title="" style="overflow: hidden;">
            <h2><i class="glyphicon glyphicon-tags"></i>&nbsp;&nbsp;Взаиморасчеты</h2>
        </div>
        <div class="box-content row">
            <div class="col-md-6"><b class="yellow">Итого:</b></div>
            <div class="col-md-6"><b class="yellow pull-right">@Model.Total</b></div>

            @foreach (var org in Model.Organizations)
            {
                <div class="col-md-6"><span class="blue">@org.Name</span></div>
                <div class="col-md-6"><span class="blue pull-right">@org.BalanceStr</span></div>
            }
           
        </div>
    </div>
</div>

<script>
    $("#providersBlock").click(function (e) {
        e.preventDefault();
        $.ajax({
            url: "/ManagementAccounting/ProviderBalance",
            type: "GET",
            cache: false,
            success: function (result) {
                $("#contentResults").html(result);
            },
            error: function (error) {
                console.log(error);
            }
        });
    });
</script>