@using AvibaWeb.ViewModels.ManagementAccountingViewModels
@model CorporatorBlockViewModel

<div class="box col-md-3 b3">
    <div class="box-inner" style="cursor: pointer;" id="corporatorsBlock">
        <div class="box-header well" data-original-title="" style="overflow: hidden;">
            <h2><i class="glyphicon glyphicon-user"></i> Корпораторы</h2>
        </div>
        <div class="box-content row">
        <div class="col-md-6"><span class="red">Задолженность:</span></div>
        <div class="col-md-6"><span class="red pull-right">@Model.NegBalance</span></div>
        <div class="col-md-6"><span class="green">Предоплата:</span></div>
        <div class="col-md-6"><span class="green pull-right">@Model.PosBalance</span></div>
        <div class="col-md-6"><span class="">Сальдо:</span></div>
        <div class="col-md-6"><span class="pull-right">@Model.TotalStr</span></div>

        </div>
    </div>
</div>

<script>
    $("#corporatorsBlock").click(function (e) {
        e.preventDefault();
        $.ajax({
            url: "/Report/CashlessCounterparties",
            type: "GET",
            cache: false,
            success: function (result) {
                $("#contentResults").html(result);
            },
            error: function (error) {
                console.log(error);
            }
        });
    });
</script>