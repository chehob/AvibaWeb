@using AvibaWeb.ViewModels.BookingManagement
@model OperationsViewModel

<div class="box">
    <div class="box-inner">
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable" id="dataTable">
                <thead>
                <tr>
                    <th>№</th>
                    
                    <th>Направление</th>
                    
                    <th>Операция</th>
                    <th style="width: 150px;">Стоимость</th>
                    
                    
                    <th>Пассажир</th>

                    <th>Пульт</th>

                    <th>Тип оплаты</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.TicketNumber<br>@item.Airline</td>
                        
                        <td>@item.Route<br>@item.DepartureDateTime</td>
                        
                        <td>@item.OperationType</td>
                        <td><b>Сумма: @item.TicketCost</b><br>КРС: @item.ServiceTax<br>Штраф: @item.Penalty</td>
                        
                        
                        <td>@item.PassengerName<br>@item.Phone<br>@item.Email</td>
                       
                        <td>@item.Desk<br>@item.OperationDateTime<br>@item.BookDesk<br>@item.BookDateTime</td>

                        <td>@item.PaymentType</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function() {
        var oTable = $('#dataTable').dataTable({
            "iDisplayLength": 100,
            "aLengthMenu": [[10, 20, 50, 100, -1], [10, 20, 50, 100, "все"]],
            "bStateSave": false,
            "sPaginationType": "full_numbers",
            "bSort": false,
            "aaSorting": [[0, "desc"]],
            "columnDefs": [
                {
                    "defaultContent": "-",
                    "targets": "_all"
                }
            ],
            "oLanguage": {
                "sSearch": "Поиск:",
                "sLengthMenu": "Показать _MENU_ записей",
                "sInfo": "Записи с _START_ до _END_ из _TOTAL_ записей",
                "sInfoEmpty": "Записи с 0 до 0 из 0 записей",
                "sInfoFiltered": "(отфильтровано из _MAX_ записей)",
                "oPaginate": {
                    "sFirst": 'Первая',
                    "sPrevious": 'Предыдущая',
                    "sNext": 'Следующая',
                    "sLast": 'Последняя'
                },
                "oaria": {
                    "ipaginate": {
                        "nfirst": 'Начало',
                        "nprevious": 'Previous',
                        "nnext": 'Next',
                        "nlast": 'Last'
                    }
                }
            }
        });
    });
</script>